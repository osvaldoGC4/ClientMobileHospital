<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Background="white"
             x:Class="ClientMobileHospital.MainPage">
             

        
        <Grid VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" >

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- Barra de menú -->
                <RowDefinition Height="*" />
                <!-- Contenido principal -->
            </Grid.RowDefinitions>

            <!-- Barra de menú -->
            <StackLayout Grid.Row="0" BackgroundColor="Gray" Padding="10">
                <Label Text="Menú" FontSize="20" HorizontalOptions="Center" />
            </StackLayout>


        <StackLayout Grid.Row="1" Orientation="Horizontal" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
            <Button Text="Medicamentos" BackgroundColor="LightBlue" TextColor="Black" TextTransform="Uppercase"  Clicked="OnMedicamentosClicked" />
            <Button Text="Doctores" BackgroundColor="LightBlue"  TextColor="Black" TextTransform="Uppercase" />
            <Button Text="Pacientes" BackgroundColor="LightBlue" TextColor="Black" TextTransform="Uppercase" />
        </StackLayout>
        
        
    </Grid>
    
</ContentPage>