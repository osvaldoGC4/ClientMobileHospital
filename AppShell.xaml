<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ClientMobileHospital.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ClientMobileHospital"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="HOSPITAL"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Formulario Medicamentos" 
        ContentTemplate="{DataTemplate local:MedicamentosPage}"
        Route="Medicamentos" />
    <ShellContent
        Title="Formulario Tratamientos" 
        ContentTemplate="{DataTemplate local:TratamientoPage}"
        Route="Tratamientos" />

</Shell>
